{
	"name": "@guyn/coat",
	"version": "1.0.11",
	"description": "Let your HTML put on a coat",
	"main": "index.js",
	"scripts": {
		"test": "npm run test",
		"build": "sass src/scss:css --style=compressed",
		"precommit": "npm run build",
		"dev:sass": "sass src/scss:css --watch",
		"dev:copy:css": "copy-and-watch css/* dokkie/css/ --watch",
		"dev:serve": "serve -l 4444 dokkie",
		"dev": "concurrently \"npm run dev:sass\"  \"npm run dev:copy:css\" \"npm run dev:serve\"",
		"dev:build": "npx dokkie@latest --skip=favicons",
		"dev:docs": "npx dokkie@latest --skip=favicons && npm run dev",
		"dev:blog": "npx dokkie@latest --type=blog --input=posts --config=blog.config.json --skip=favicons && npm run dev",
		"stylelint": "stylelint 'src/scss/*.scss' 'src/scss/**/*.scss'",
		"stylelint:fix": "stylelint 'src/scss/*.scss' 'src/scss/**/*.scss' --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Guyn/coat.git"
	},
	"keywords": [
		"coat",
		"html",
		"css",
		"styling"
	],
	"author": "Sil van Diepen",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Guyn/coat/issues"
	},
	"homepage": "https://github.com/Guyn/coat#readme",
	"devDependencies": {
		"@guyn/color": "0.0.2",
		"autoprefixer": "^9.8.0",
		"concurrently": "^5.2.0",
		"copy-and-watch": "^0.1.4",
		"dokkie": "0.0.74",
		"git-pre-commit": "^2.1.4",
		"guyn-style": "0.1.0-alpha.16",
		"postcss": "^7.0.31",
		"rollup": "^2.12.0",
		"rollup-plugin-livereload": "^1.3.0",
		"rollup-plugin-sass": "^1.2.2",
		"rollup-plugin-serve": "^1.0.1",
		"rollup-watch": "^4.3.1",
		"sass": "^1.26.5",
		"stylelint": "^13.5.0",
		"stylelint-logical-order": "0.0.8",
		"stylelint-order": "^4.0.0"
	},
	"dependencies": {
		"serve": "^11.3.2"
	}
}
