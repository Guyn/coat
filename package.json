{
	"name": "@guyn/coat",
	"version": "1.0.2",
	"description": "Let your HTML put on a coat",
	"main": "index.js",
	"scripts": {
		"test": "npm run test",
		"build": "sass src/theme:theme",
		"dev:sass": "sass src:. --watch --style=compressed",
		"dev:copy:theme": "copy-and-watch theme/* docs/theme --watch",
		"dev:copy:code": "copy-and-watch code/* docs/code --watch",
		"dev:serve": "serve -l 3000 docs",
		"dev": "npx dokkie && concurrently \"npm run dev:sass\" \"npm run dev:copy:theme\" \"npm run dev:copy:code\" \"npm run dev:serve\"",
		"stylelint": "stylelint 'src/*.scss' 'src/**/*.scss'",
		"stylelint:fix": "stylelint 'src/*.scss' 'src/**/*.scss' --fix"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Guyn/coat.git"
	},
	"keywords": [
		"coat",
		"html",
		"css",
		"styling"
	],
	"author": "Sil van Diepen",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Guyn/coat/issues"
	},
	"homepage": "https://github.com/Guyn/coat#readme",
	"dependencies": {
		"concurrently": "^5.2.0",
		"copy-and-watch": "^0.1.4",
		"sass": "^1.26.5"
	},
	"devDependencies": {
		"@guyn/color": "0.0.2",
		"autoprefixer": "^9.8.0",
		"postcss": "^7.0.31",
		"rollup": "^2.12.0",
		"rollup-plugin-livereload": "^1.3.0",
		"rollup-plugin-sass": "^1.2.2",
		"rollup-plugin-serve": "^1.0.1",
		"rollup-watch": "^4.3.1",
		"serve": "^11.3.1",
		"stylelint": "^13.5.0",
		"stylelint-logical-order": "0.0.8",
		"stylelint-order": "^4.0.0"
	}
}
